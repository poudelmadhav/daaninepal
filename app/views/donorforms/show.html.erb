<% if current_user.admin? %>
<div class="page-header">
  <%= link_to donorforms_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    All Donorforms
  <% end %>
  <%= link_to edit_donorform_path(@donorform), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
</div>

<% end %>

<div class="row">
  <div class="col-md-6">
    <h1>Donation Request #<%= @donorform.id %></h1>
  </div>
  <div class="col-md-6">
    <!-- Modal -->
    <!-- Button trigger modal -->
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
      Donate Now
    </button>

<% if !current_user.admin? %>
    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Type Amount in Rs.</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <%= simple_form_for DonatedAmount.new, url: donorform_donated_forms_path(@donorform) do |f| %>
          <div class="modal-body">
            Rs. <%= f.input :damount %>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            <%= f.submit 'Donate', class: 'btn btn-success' %>
          </div>
          <% end %>
        </div>
      </div>
    </div>

  <% end %>

  </div>
</div>

<dl class="dl-horizontal">
  <dt>User:</dt>
  <dd><%= link_to @donorform.user_name, user_path(@donorform.user_id) %></dd>

  <dt>Title:</dt>
  <dd><%= @donorform.title %></dd>

  <dt>Description:</dt>
  <dd><%= @donorform.description %></dd>

  <dt>Amount:</dt>
  <dd>Rs.<%= @donorform.amount %>/-</dd>

  <dt>Promises:</dt>
  <dd><%= @donorform.promises %></dd>

  <dt>Deadline:</dt>
  <dd><%= @donorform.deadline %></dd>

  <% if current_user.admin %>

  <dt>Approve:</dt>
  <dd><%= @donorform.approve %></dd>

  <dt>Reject:</dt>
  <dd><%= @donorform.reject %></dd>

  <% end %>

</dl>
