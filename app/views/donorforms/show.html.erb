<div class="row">
  <div class="col-md-6">
    <h1>Donation Request #<%= @donorform.id %></h1>
  </div>
  <div class="col-md-6"><label>Donate Now</label></div>
</div>

<dl class="dl-horizontal">
  <dt>User:</dt>
  <dd><%= link_to @donorform.user_name, user_path(@donorform.user_id) %></dd>

  <dt>Title:</dt>
  <dd><%= @donorform.title %></dd>

  <dt>Description:</dt>
  <dd><%= @donorform.description %></dd>

  <dt>Amount:</dt>
  <dd><%= @donorform.amount %></dd>

  <dt>Promises:</dt>
  <dd><%= @donorform.promises %></dd>

  <dt>Deadline:</dt>
  <dd><%= @donorform.deadline %></dd>

</dl>
